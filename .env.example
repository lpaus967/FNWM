# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/fnwm
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=fnwm
DATABASE_USER=fnwm_user
DATABASE_PASSWORD=your_password_here

# Redis Cache (optional, for production)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# NWM Data Source
NWM_BASE_URL=https://nomads.ncep.noaa.gov/pub/data/nccf/com/nwm/
NWM_DOWNLOAD_PATH=./data/raw/nwm

# Application Settings
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
API_HOST=0.0.0.0
API_PORT=8000

# Data Ingestion Schedule
INGEST_ANALYSIS_ASSIM_INTERVAL_MINUTES=60
INGEST_SHORT_RANGE_INTERVAL_MINUTES=60
INGEST_MEDIUM_BLEND_INTERVAL_MINUTES=360
INGEST_NO_DA_INTERVAL_MINUTES=1440

# NWM Configuration
NWM_DOMAIN=conus  # conus, alaska, hawaii, puertorico
NWM_TIMEOUT_SECONDS=300
NWM_RETRY_ATTEMPTS=3

# Caching Configuration
CACHE_TTL_NOW_SECONDS=3600  # 1 hour
CACHE_TTL_TODAY_SECONDS=3600  # 1 hour
CACHE_TTL_OUTLOOK_SECONDS=21600  # 6 hours
CACHE_TTL_SCORES_SECONDS=3600  # 1 hour

# Monitoring & Observability
SENTRY_DSN=  # Optional: Sentry error tracking
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# API Configuration
API_RATE_LIMIT=100  # requests per minute
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Validation & Feedback
ENABLE_VALIDATION_LOOP=true
MIN_OBSERVATIONS_FOR_CALIBRATION=50

# Feature Flags
ENABLE_TEMPERATURE_INTEGRATION=false
ENABLE_ENSEMBLE_SPREAD=false
ENABLE_EXPERIMENTAL_SCORING=false

# Config File Paths
SPECIES_CONFIG_DIR=./config/species
HATCH_CONFIG_DIR=./config/hatches
THRESHOLD_CONFIG_DIR=./config/thresholds
